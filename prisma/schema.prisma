generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL") // Для запросов (пуллинг)
  directUrl = env("DATABASE_URL")        // Для миграций и транзакций
}

model User {
    id Int @id @default(autoincrement())

    fullName String
    email    String @unique
    password String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Product {
    id Int @id @default(autoincrement())

    name     String
    imageUrl String

    // ingredients Ingredient[]
    // items       ProductItem[]

    // category   Category @relation(fields: [categoryId], references: [id])
    // categoryId Int

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
